<%= form_for :tea, url: tea_path(@tea), method: :patch do |f| %>

    <% if @tea.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@tea.errors.count, "error") %> prohibited
            this tea from being saved:
